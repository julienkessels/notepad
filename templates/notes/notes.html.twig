{% extends 'base.html.twig' %}

{% block body %}

<div class="col-xs-4 text-center">
  <div class="row" style="margin-top:100px; margin-bottom:50px">
    <a style="display: block; margin: 0 auto;" class="btn btn-primary" href={{ path('new_note') }} role="button">new note</a>
  </div>
</div>

<div class="row" style="margin-top:50px">

  {% for item in notes %}
  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card">
      <div class="card-body text-center">
        <h4 class="card-title">{{ item.getTitle() }}</h4>
        <p class="card-text">{{ item.getContent() }}</p>
      </div>
      <div class="card-body text-center" style="background-color:#3c3c3c">
        <h4 style="color:#fff" class="card-title">{{ item.getCategory().getLibelle()}}</h4>
        <p style="color:#fff" class="card-text">{{ item.getDate()|date('Y-m-d') }}</p>
      </div>
      <div class="card-footer text-center">
        <a href={{ path('edit_note', {'id': item.getId() }) }} class="btn btn-primary">Edit note</a>
        <a href={{ path('delete_note', {'id': item.getId() }) }} class="btn btn-primary">Delete note</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}
