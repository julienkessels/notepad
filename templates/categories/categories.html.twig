
{% extends 'base.html.twig' %}

{% block body %}
<div class="col-xs-12 text-center">
<div class="row" style="margin-top:100px; margin-bottom:50px">
<a style="display: block; margin: 0 auto;" class="btn btn-primary" href={{ path('new_category') }} role="button">new category</a>

<div class="container">

<div class="row" style="margin-top:50px">


<div class="col-md-12">
<div class="table-responsive">


<table id="mytable" class="table table-bordred table-striped">

<thead>

<th>ID</th>
<th>Name</th>
<th>Edit</th>
<th>Delete</th>
</thead>
<tbody>

{% for item in categories %}

<tr>
<td>{{ item.getId() }}</td>
<td>{{ item.getLibelle() }}</td>


<td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" onclick="window.location.href='{{ path('category_edit', {'id': item.getId() }) }}'"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
<td><p data-placement="top" data-toggle="tooltip" title="Delete"> <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" onclick="window.location.href='{{ path('category_delete', {'id': item.getId() }) }}'"><span class="glyphicon glyphicon-trash"></span></button></p></td>
</tr>
{% endfor %}


</tbody>

</table>

</div>
</div>
</div>
</div>
</div>

{% endblock %}
