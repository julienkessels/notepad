
{% extends 'base.html.twig' %}

{% block body %}

<div class="col-xs-12 text-center">
  <div class="row" style="margin-top:100px; margin-bottom:50px">
    <a style="display: block; margin: 0 auto;" class="btn btn-primary" href={{ path('new_category') }} role="button">new category</a>
  </div>
</div>

<div class="row" style="margin-top:100px">

  {% for item in categories %}
  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card">
      <div class="card-body text-center">
        <h4 class="card-title">{{ item.getLibelle() }}</h4>
        </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}
